<TonesPopup>
    title: "Add Tone"
    auto_dismiss: False
    size_hint: 0.8,0.8
    pos_hint: {'center_x':0.5 , 'center_y':0.5 }

    GridLayout:
        cols:1
        size: root.width , root.height
        padding: 20
        spacing: 20

        Label:
            text:"Input the fields"
            size_hint: (0.5, 0.1)
            font_size: 24

        GridLayout:
            cols:2
            spacing: 20

            Label:
                text: "Start note:"
                font_size: 24

            Spinner:
                id: startNote
                text: "A"
                values: ["A", "A#", "B", "C", "C#", "D", "D#", "E", "F", "F#", "G", "G#"]
                font_size: 24

            Label:
                id: octaveSliderText
                text: "Octave: 5"
                font_size: 24

            MDSlider:
                id: octaveSlider
                min: 1
                max: 7
                step: 1
                orientation: 'horizontal'
                value: 5
                hint: False
                humb_color_down: app.theme_cls.primary_color
                on_value: root.octave_slider(*args)

            Label:
                text: "Duration: "
                font_size: 24

            MDTextField:
                id: duration
                multiline : False
                font_size: 24
                text: '1'
                mode: "fill"
                fill_color: 1,1,1,0.1
                on_submit:

            Label:
                text: "End note:"
                font_size: 24

            Spinner:
                id: endNote
                text: "A"
                values: ["A", "A#", "B", "C", "C#", "D", "D#", "E", "F", "F#", "G", "G#"]
                font_size: 24

        MDFlatButton:
            text:"Next"
            size_hint: (0.5, 0.25)
            font_size: 24
            md_bg_color: app.theme_cls.primary_color
            on_release:
                root.confirm_tone(self)
                #app.root.current = "SecondWindow"