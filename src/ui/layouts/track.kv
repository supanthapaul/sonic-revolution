#: import utils kivy.utils

<TrackLayout>:

    cols:2
    height: 70
    TonesRecycleView:
            # pos_hint: {'center_x':0.5, 'center_y':0.5}
        viewclass: 'Label'
        id: tones_recycle
        do_scroll: (True, False)
        size_hint_x: 0.8
        bar_width: 5
        scroll_type: ['bars', 'content']
        RecycleBoxLayout:
            id: tones_layout
            orientation: 'horizontal'
            # padding:20
            # spacing: 40
            default_size_hint: None, 1
            size_hint_x: None
            size_hint_y: 1
            width: self.minimum_width
    Button:
        text: 'Add Tone'
        size_hint_x: 0.2
        on_release: root.open_tone_popup(self)

