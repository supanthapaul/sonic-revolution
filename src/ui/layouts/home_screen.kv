<HomeScreenLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 100
        spacing: 20


        Label:
            text: "Sonic Revolution"
            font_size: 60
            font_color: (0,0,0,1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.25}
        
        Label:
            text: "Create a mixer to get started"
            font_size: 30
            font_color: (0,0,0,1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.35}

        #Image:
            #source: 'layouts/A.png'
            #allow_stretch: True
            #keep_ratio: True

        MDFlatButton:
            text: "Create new Mixer"
            elevation: 8
            font_size: 32
            pos_hint: {'center_x': 0.5 , 'center_y': 0.5}
            size_hint: (0.7,None)
            height: 70
            on_release: Factory.MixerPopup().open()
            md_bg_color: app.theme_cls.primary_color