#: include src/ui/layouts/track.kv
##: include src/ui/layouts/tracks_list.kv

<MixerScreenLayout>
    GridLayout:
        size: root.width, root.height
        padding: 50
        spacing:30
        cols:1

        #Label:
        #    text: "Tracks and Tones"
        #    pos_hint:{'center_x': 0.5 , 'center_y': 0.75}
        #    font_size: 45
        #    color: (1,1,1,1)
        #    outline_color:(0,0,1,1)
        #    outline_width: 3

        MDFlatButton:
            text: 'Add Tracks'
            font_size: 32
            pos_hint: {'center_x': 0.5 , 'center_y': 0.75}
            size_hint: (0.7,None)
            height: 50
            md_bg_color: app.theme_cls.primary_color
            on_release:
                Factory.TracksPopup().open()

        TracksRecycleView:
            # pos_hint: {'center_x':0.5, 'center_y':0.5}
            viewclass: 'TrackLayout'
            id: scroll
            size_hint_x: 1
            do_scroll: (False, True)
            bar_width: 5
            RecycleBoxLayout:
                id: tracks_grid
                orientation: 'vertical'
                # padding:20
                # spacing: 40
                default_size_hint: 1, None
                size_hint_x: 1
                size_hint_y: None
                height: self.minimum_height
        MDFlatButton:
            text: 'Preview'
            font_size: 32
            pos_hint: {'center_x': 0.5 , 'center_y': 0.75}
            size_hint: (0.7,None)
            height: 50
            md_bg_color: app.theme_cls.primary_color
            on_release: root.preview_audio(self)





