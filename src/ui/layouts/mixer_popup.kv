<MixerPopup>
    auto_dismiss: False
    size_hint: 0.8,0.8
    pos_hint: {'center_x':0.5 , 'center_y':0.5 }
    title: "Mixer properties"

    GridLayout:
        cols:1
        size: root.width , root.height
        padding: 20
        spacing: 20

        Label:
            text:"Input the fields"
            font_size: 24

        GridLayout:
            cols:2
            spacing:10
            #padding:10

            Label:
                text: "Sample Rate:"
                font_size: 24

            MDTextField:
                id: sampleRate
                multiline : False
                font_size: 22
                mode: "fill"
                fill_color: 1,1,1,0.1
                text: '44100'

            Label:
                text: "Amplitude:"
                font_size: 24

            MDTextField:
                id: amplitude
                multiline : False
                font_size: 22
                mode: "fill"
                fill_color: 1,1,1,0.1
                text: '0.5'

        MDFlatButton:
            text:"Done"
            font_size: 24
            size_hint: (0.7,None)
            height: 50
            md_bg_color: app.theme_cls.primary_color
            on_release:
                root.confirm(self)